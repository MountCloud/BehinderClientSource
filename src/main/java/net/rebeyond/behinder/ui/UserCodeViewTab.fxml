<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.rebeyond.behinder.ui.controller.UserCodeViewController"
            prefHeight="400.0" prefWidth="600.0">

        <children>
            <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" percentHeight="60.00" vgrow="SOMETIMES" />
                    <RowConstraints maxHeight="100.0" minHeight="10.0" percentHeight="10.00" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" percentHeight="30.00" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Button fx:id="runCodeBtn" mnemonicParsing="false" text="运行" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                    <TitledPane animated="false" collapsible="false" maxHeight="1.7976931348623157E308" text="源代码">
                        <content>
                            <!--<TextArea fx:id="sourceCodeTextArea" prefHeight="200.0" prefWidth="200.0" />-->
                            <WebView fx:id="sourceCodeWebview" prefHeight="200.0" prefWidth="200.0" />
                        </content>
                        <GridPane.margin>
                            <Insets left="5.0" right="5.0" top="5.0" />
                        </GridPane.margin>
                    </TitledPane>
                    <TitledPane animated="false" collapsible="false" maxHeight="1.7976931348623157E308" text="运行结果" GridPane.rowIndex="2">
                        <content>
                            <TextArea fx:id="sourceResultArea" prefHeight="200.0" prefWidth="200.0" />
                        </content>
                        <GridPane.margin>
                            <Insets left="5.0" right="5.0" />
                        </GridPane.margin>

                    </TitledPane>
                </children>
            </GridPane>
        </children></AnchorPane>
